{
  "compilerOptions": {
    "target": "es2023",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  },
  "include": [
    "src",
    "prisma",
    "app.ts",
    "server.ts",
    "shared/errors",
    "shared/utils/password.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
